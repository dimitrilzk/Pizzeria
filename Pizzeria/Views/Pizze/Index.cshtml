@model IEnumerable<Pizzeria.Models.Pizze>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center my-4">Il nostro listino Pizze!</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-3 mb-4">
            <div class="card border-5  rounded-5 overflow-hidden border-dark cardshadow" style="width: 18rem;">
                <img src="~/Content/img/@item.Foto" class="card-img-top" alt="...">
                <div class="card-body bgcard text-center ">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome) - @Html.DisplayFor(modelItem => item.Prezzo)</h5>
                    <p class="card-text cardheight">@Html.DisplayFor(modelItem => item.Ingredienti).</p>
                    @Html.ActionLink("Maggiori informazioni", "Details", new { id = item.IdPizza }, new { @class = "btn btn-primary form-control" })
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.IdPizza }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdPizza })*@
                </div>
            </div>
        </div>
    }
</div>
